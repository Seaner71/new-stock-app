<h1>Add A Stock</h1>
<%= form_with(model: [@account, @account.stocks.new], local: true) do |f| %>
  <% if @stock.errors.any? %>
    <div id="explain_error">
      <h2>
        Uh oh!
        <%= pluralize(@stock.errors.count, "error") %>
        prohibited this post from being saved:
      </h2>
      <ul>
        <% @stock.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :ticker %> <br>
    <%= f.text_field :ticker %>
  </div>
  <div class="form-group">
    <%= f.label :shares %> <br>
    <%= f.number_field :shares, min: 1 %>
  </div>

  <div class="actions">
    <%= f.submit "Add stock", class: "btn btn-success" %>
  </div>
<% end %>
