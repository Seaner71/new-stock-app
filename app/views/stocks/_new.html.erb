<h1>Add A Stock</h1>



  <%= form_with(model: [@account, @account.stocks.build]) do |f| %>
  <div class="form-group">
    <%= f.label :ticker %> <br>
    <%= f.text_field :ticker %>
  </div>
  <div class="form-group">
    <%= f.label :shares %> <br>
    <%= f.number_field :shares, min: 1 %>
  </div>

  <div class="actions">
    <%= f.submit "Add stock", class: "btn btn-success" %>
  </div>
<% end %>
