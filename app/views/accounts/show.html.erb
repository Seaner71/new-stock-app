<h1><%= @account.name %> Account</h1>
<%= link_to "Delete account", account_path, method: :delete, class: 'btn btn-danger' %>
<%= link_to "add a stock", new_account_stock_path(@account) %>
    <table class="table table-striped table-bordered table-hover">
         <thead>
           <tr>
             <th>Company Name</th>
             <th>Ticker</th>
             <th>Shares</th>
             <th>Sector</th>
             <th>Current Price</th>
             <th>Market Value</th>
           </tr>
         </thead>

         <tbody>
           <% @total_mv = 0 %>
           <% @account.stocks.each do |stock| %>
               <% @stock_quote = StockQuote::Stock.quote(stock.ticker) %>
             <tr>
                 <td><%= link_to @stock_quote.name, account_stock_path(@account,stock) %></td>
                 <td><%= stock.ticker.upcase %></td>
                 <td><%= stock.shares %></td>
                 <td><%= stock.sname %></td>
                 <%# if stock.last_price != nil %>
                   <%# stock.last_price %>
                 <%# else %>
                   <td><%= @stock_quote.l %></td>
                 <%# end %>
                <% @market_value = (stock.shares * @stock_quote.l.gsub(/[^\d^\.]/, '').to_f)%>
                 <td> <%= number_to_currency(@market_value) %></td>
                     <% @total_mv += @market_value %>
               </tr>
           <% end %>

         </tbody>
       </table>
           <%= number_to_currency(@total_mv) %>
   <br>

   <%#= link_to 'Add a Stock', new_stock_path, class: 'btn btn-default' %>
<div class="row">
 <div class="col-6">
  <% @stock_ticker_hash = Hash[@account.stocks.group(:sname).sum(:shares).map { |k, v| [k, v * @stock_quote.l.to_f] }] %>
  <%= pie_chart @stock_ticker_hash %>
 </div>
 <div class="col-6">
  <% @stock_sector_hash = Hash[@account.stocks.group(:sname).sum(:shares).map { |k, v| [k, v * @stock_quote.l.to_f] }] %>
  <%= pie_chart @stock_sector_hash %>
 </div>
</div>
