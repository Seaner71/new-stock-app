                 <td><%= stock.ticker.upcase %></td>
                 <td><%= stock.shares %></td>
                 <td><%= stock.sname %></td>
                 <%# if stock.last_price != nil %>
                   <%# stock.last_price %>
                 <%# else %>
                   <td><%#= @stock_quote.l %></td>
                 <%# end %>

                     <%# @market_value = (stock.shares * @stock_quote.l.gsub(/[^\d^\.]/, '').to_f)%>
                 <td> <%#= number_to_currency(@market_value) %></td>
                     <%# @total_mv += @market_value %>
               </tr>
           <% end %>

         </tbody>
       </table>
