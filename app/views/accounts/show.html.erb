<h1><%= @account.name %> Account</h1>
<%= link_to "Delete account", account_path, method: :delete, class: 'btn btn-danger' %>

<% @account.stocks.each do |stock| %>
      <%= number_to_currency(stock.shares) %>
  <% end %>
<%= link_to "add a stock", new_account_stock_path(@account) %>
